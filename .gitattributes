# Auto detect text files and normalize line endings to LF
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# CSV files
*.csv text eol=lf

# HTML/Template files
*.html text eol=lf
*.htm text eol=lf

# Binary files
*.pkl binary
*.joblib binary
*.pyc binary
*.pyo binary
*.pyd binary
